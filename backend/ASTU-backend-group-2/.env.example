# Application Environment
APP_ENV=development

# Server Settings
SERVER_ADDRESS=:8080
CONTEXT_TIMEOUT=30

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=your_db_name

# Token Expiry and Secrets
ACCESS_TOKEN_EXPIRY_HOUR=1
REFRESH_TOKEN_EXPIRY_HOUR=24
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
VERIFICATION_TOKEN_EXPIRY_MIN=15
VERIFICATION_TOKEN_SECRET=your_verification_token_secret

# Email Configuration
SENDER_EMAIL=your_email@example.com
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SENDER_PASSWORD=your_email_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_URL_CALLBACK=https://yourapp.com/oauth2callback

# Session Configuration
SESSION_SECRET=your_session_secret

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_WORD_COUNT=500

# Password Reset Configuration
PASS_RESET_CODE_EXPIRATION_MIN=5
